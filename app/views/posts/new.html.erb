<h1>New Post</h1>

<%= form_with(model: @post) do |form| %>
  <% if @post.errors.any? %>
    <div>
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :images, "Attach Images" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div id="location-container">
    <%= form.hidden_field :location, id: "post_location" %>
    <%= form.hidden_field :latitude, id: "post_latitude" %>
    <%= form.hidden_field :longitude, id: "post_longitude" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>

<script>
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(function(position) {
      console.log(position.coords.latitude);  // Log the latitude to console
      console.log(position.coords.longitude); // Log the longitude to console

      document.getElementById("post_latitude").value = position.coords.latitude;
      document.getElementById("post_longitude").value = position.coords.longitude;
    });
  } else {
    alert("Geolocation is not supported by this browser.");
  }
</script>
