<div class="container">

	<h1><%= @post.content %></h1>

	<% if @post.images.attached? %>
	  <h2>Images:</h2>
	  <div>
	    <% @post.images.each do |image| %>
	      <%= image_tag image, size: "300x300" %> <!-- You can adjust size as needed -->
	    <% end %>
	  </div>
	<% else %>
	  <p>No images attached.</p>
	<% end %>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>

</div>
